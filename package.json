{
  "name": "challenge-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run test:lint:fix",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node -r dotenv/config .",
    "start:prod": "node .",
    "start:watch": "nodemon",
    "test:lint:fix": "eslint src/**/*.ts --fix",
    "test:lint": "eslint src/**/*.ts",
    "test:unit-tests": "mocha src/*.spec.ts src/**/*.spec.ts",
    "test:coverage": "nyc mocha src/*.spec.ts src/**/*.spec.ts",
    "test": "npm run test:lint && npm run test:unit-tests",
    "seed": "ts-node -r dotenv/config ./src/seeds/run.ts",
    "githook": "npm run test:lint:fix"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.1.7",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/hapi__joi": "^15.0.1",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mocha": "^5.2.6",
    "@types/mongodb-memory-server": "^1.8.0",
    "@types/mongoose": "^5.5.1",
    "@types/mongoose-paginate-v2": "^1.0.2",
    "@types/morgan": "^1.7.35",
    "@types/node": "^12.0.2",
    "@types/ramda": "^0.26.8",
    "@types/supertest": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.3.0",
    "mocha": "^6.1.4",
    "mongodb-memory-server": "^5.1.2",
    "nodemon": "^1.19.0",
    "nyc": "^14.1.1",
    "prettier": "^1.17.1",
    "source-map-support": "^0.5.12",
    "supertest": "^4.0.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "@hapi/joi": "^15.0.3",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.9",
    "mongoose-paginate-v2": "^1.2.1",
    "morgan": "^1.9.1",
    "ramda": "^0.26.1"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "src/index.ts",
      "src/db/index.ts",
      "test/*",
      "src/seeds/run.ts"
    ],
    "reporter": [
      "text"
    ],
    "all": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run githook",
      "pre-push": "npm run githook"
    }
  }
}
